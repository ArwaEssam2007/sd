<Page x:Class="Arwa_0522093.search"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Arwa_0522093"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="search">

    <Grid Background="White">
        <Label Content="city" Style="{StaticResource txt}" HorizontalAlignment="Left" Margin="58,118,0,0" VerticalAlignment="Top" FontSize="36" Width="106"/>
        <TextBox x:Name="citytxt" HorizontalAlignment="Left" Margin="192,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="274" FontSize="24" Height="52" BorderBrush="Black"/>
        <DataGrid Name="dg1" Margin="10,215,10,10" SelectionChanged="dg1_SelectionChanged"/>
        <Button Content="Search" HorizontalAlignment="Left" Margin="571,47,0,0" VerticalAlignment="Top" Background="#FF036DFF" FontSize="36" Foreground="White" Width="127" Height="77" Click="Button_Click"/>
        <Label Content="phone" Style="{StaticResource txt}" HorizontalAlignment="Left" Margin="58,42,0,0" VerticalAlignment="Top" FontSize="36" Width="106"/>
        <TextBox x:Name="phonenumber" HorizontalAlignment="Left" Margin="192,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="274" FontSize="24" Height="52" BorderBrush="Black"/>

    </Grid>
</Page>
